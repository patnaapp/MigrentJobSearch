
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true">

        <LinearLayout
            android:background="#10163A"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_gravity="center"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:src="@drawable/profile"
                    app:civ_border_width="0dp" />

                <LinearLayout
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                        android:padding="5dp"
                        android:id="@+id/tv_benname"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20sp"
                        android:text="Vijya Shalinee"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:padding="5dp"
                            android:id="@+id/urole"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="  Detail of user for job search "
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_weight="0.3"
                    android:layout_gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_action_logout"></ImageView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="5dp">

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="Today"
                    android:textSize="13sp" />-->

                <TextView
                    android:id="@+id/cdate"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20dp"
                    android:text="22 November 2018"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingRight="2dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District : "/>

                <Spinner
                    android:id="@+id/spinnerdist"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"></Spinner>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:padding="4sp"
        android:layout_below="@+id/view"

        android:background="#eaeaea"
        android:id="@+id/linfilter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5sp"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:layout_gravity="center"
            android:layout_width="183dp"
            android:layout_marginRight="5sp"
            android:id="@+id/flterText"
            android:layout_height="40sp"
            android:layout_weight="0.9"
            android:background="@drawable/searchboxdesign"
            android:hint="  नई नौकरी खोजें"
            android:padding="5dip" />
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/button_press_style"
            android:id="@+id/img_search"
            android:padding="10dp"
            android:layout_width="50sp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_filter"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5sp"
                android:src="@drawable/ic_filter" />
        </LinearLayout>
    </LinearLayout>

        <ScrollView
            android:layout_below="@+id/linfilter"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <View
                    android:id="@+id/vw_div"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#330099" />

                <LinearLayout
                    android:layout_below="@+id/vw_div"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <LinearLayout

                        android:layout_margin="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:onClick="onRegister"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:gravity="center"
                            android:background="@drawable/boxouterlayer"
                            android:id="@+id/ll_register_Grivance">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/new_entry"
                                android:tint="#10163A"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="दस्तावेज़ में संशोधन करें"
                                android:gravity="center"
                                android:textSize="13sp"
                                android:layout_marginTop="8dp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textAppearance="?android:textAppearanceSmall"/>

                        </LinearLayout>


                        <View
                            android:layout_width="10dp"
                            android:layout_height="match_parent">

                        </View>

                        <LinearLayout
                            android:layout_marginRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:gravity="center"
                            android:background="@drawable/boxouterlayer"
                            android:id="@+id/ll_profile">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:tint="#10163A"
                                android:src="@drawable/ic_person_black_24dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="प्रोफाइल देखिये"
                                android:gravity="center"
                                android:layout_marginTop="8dp"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textAppearance="?android:textAppearanceSmall"/>


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </ScrollView>


</RelativeLayout>
