<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_gray_bright">

    <RelativeLayout
        android:visibility="gone"
        android:padding="8dp"
        android:id="@+id/rl_nav"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digital_india" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/csc" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rl_nav"
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="बिहार श्रम साधन"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo3" />

        <TextView
            android:visibility="gone"
            android:textColor="#DD2424"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="e-Labharthi"

            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#DD2424"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="उद्योग विभाग,बिहार"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:layout_margin="20dp"
        android:id="@+id/iv_logo1"
        android:layout_below="@+id/ll_header"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:padding="4dp"
        android:background="@drawable/circular_shape_white"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_below="@+id/iv_logo1"
        android:padding="12dp"
        android:background="@drawable/textboxshape3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/textboxshape">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_person_black_24dp"/>

            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/ll_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D8D7D7"
                android:layout_toRightOf="@+id/iv_user"
                android:orientation="horizontal"/>

            <EditText
                android:layout_toRightOf="@+id/ll_divider"
                android:id="@+id/et_reg_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textboxshape2"
                android:hint="यूज़र आईडी"
                android:padding="10dp"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:textColor="#222222"
                android:focusableInTouchMode="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textboxshape"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:src="@drawable/ic_vpn_key_black_24dp" />

            <LinearLayout
                android:id="@+id/ll_divider_pass"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@+id/iv_password"
                android:background="#D8D7D7"
                android:orientation="horizontal" />

            <EditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ll_divider_pass"
                android:background="@drawable/textboxshape2"
                android:focusableInTouchMode="true"
                android:hint="पासवर्ड"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="#222222"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/email_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="  Login with Link 1 (For CSC Login )  "
            android:textColor="#ffff"
            android:textSize="17sp" />
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="    लॉगिन करें    "
            android:textColor="#ffff"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/ll_input"
        android:id="@+id/tv_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@drawable/textboxshape"
        android:padding="8dp"
        android:text=" पंजीकरण करें "
        android:textAlignment="center"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/iv_footer"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:src="@drawable/nic"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ऐप वर्ज़न 1.0"
        android:layout_above="@+id/iv_footer"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"/>
</RelativeLayout>
