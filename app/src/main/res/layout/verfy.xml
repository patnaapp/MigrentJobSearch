<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AD1F2">

    <RelativeLayout
        android:visibility="gone"
        android:padding="8dp"
        android:id="@+id/rl_nav"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/digital_india" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/csc" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_nav"
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="श्रम शाधन"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:visibility="gone"
            android:layout_marginTop="26dp"
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo3" />

        <TextView
            android:visibility="gone"
            android:textColor="#DD2424"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="e-Labharthi"

            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#DD2424"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="बिहार सरकार"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_input"
        android:padding="12dp"
        android:background="@drawable/textboxshape2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_header"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/textboxshape">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_person_black_24dp"/>

            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/ll_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D8D7D7"
                android:layout_toRightOf="@+id/iv_user"
                android:orientation="horizontal"/>

            <EditText
                android:layout_toRightOf="@+id/ll_divider"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textboxshape2"
                android:hint="रेजिस्ट्रेशन संख्या"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#222222"
                android:focusableInTouchMode="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/textboxshape">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_vpn_key_black_24dp"/>

            <LinearLayout
                android:layout_marginRight="4dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/ll_divider_pass"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D8D7D7"
                android:layout_toRightOf="@+id/iv_password"
                android:orientation="horizontal"/>

            <EditText
                android:layout_toRightOf="@+id/ll_divider_pass"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textboxshape2"
                android:hint="ओटीपी"
                android:inputType="textPassword"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#222222"
                android:focusableInTouchMode="true"
                android:textSize="15sp" />
        </RelativeLayout>

        <Button
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/email_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="  Login with Link 1 (For CSC Login )  "
            android:textColor="#ffff"
            android:textSize="17sp" />
         <Button
            android:layout_gravity="center"
            android:id="@+id/email_sign_in_button2"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshape"
            android:text="    लॉगिन करें    "
            android:textColor="#ffff"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_margin="20dp"
        android:layout_below="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="UserId and Password is available in block Login of Elabharti Website .  "
            android:textColor="@android:color/holo_red_dark"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This app is for Physical verification of e-Labharthi Pensioners .  "
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your username and password here to authenticate your log-in and enjoy seamless access to physical verification Application."
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>
